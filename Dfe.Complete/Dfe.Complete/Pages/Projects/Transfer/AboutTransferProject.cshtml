@page "/transfer-projects/{projectId}/information"
@using Dfe.Complete.Constants
@using Dfe.Complete.TagHelpers
@model Dfe.Complete.Pages.Projects.Transfer.AboutTransferProjectModel
@{
    var projectDetails = Model.Project.ProjectDetails;
    var reasonForTransfer = Model.Project.ReasonForTheTransfer;
    var advisoryBoardDetails = Model.Project.AdvisoryBoardDetails;
    var schoolDetails = Model.Project.SchoolDetails;
    var incomingTrustDetails = Model.Project.IncomingTrustDetails;
    var outgoingTrustDetails = Model.Project.OutgoingTrustDetails;

    var schoolGiasLink = new LinkSummaryItem()
            {
                Label = schoolDetails.Name,
                Link = string.Format(ExternalSiteConstants.GiasEstablishment, schoolDetails.Urn),
                LinkText = "View the school's information in GIAS"
            };

    var schoolSharePointLink = new LinkSummaryItem()
            {
                Link = schoolDetails.SharePointLink,
                LinkText = "View the academy SharePoint folder"
            };

    var incomingTrustGiasLink = new LinkSummaryItem()
            {
                Label = incomingTrustDetails.Name,
                Link = string.Format(ExternalSiteConstants.GiasTrust, incomingTrustDetails.UkPrn),
                LinkText = "View the trust information in GIAS"
            };

    var incomingTrustSharePointLink = new LinkSummaryItem()
            {
                Link = incomingTrustDetails.SharePointLink,
                LinkText = "View the trust SharePoint folder"
            };

    var incomingTrustcompaniesHouse = new LinkSummaryItem()
            {
                Label = incomingTrustDetails.CompaniesHouseNumber,
                Link = string.Format(ExternalSiteConstants.CompaniesHouseByCompany, incomingTrustDetails.CompaniesHouseNumber),
                LinkText = "View the Companies House information"
            };

    var outgoingTrustGiasLink = new LinkSummaryItem()
            {
                Label = outgoingTrustDetails.Name,
                Link = string.Format(ExternalSiteConstants.GiasTrust, outgoingTrustDetails.UkPrn),
                LinkText = "View the trust information in GIAS"
            };

    var outgoingTrustSharePointLink = new LinkSummaryItem()
            {
                Link = outgoingTrustDetails.SharePointLink,
                LinkText = "View the trust SharePoint folder"
            };

    var outgoingTrustCompaniesHouse = new LinkSummaryItem()
            {
                Label = outgoingTrustDetails.CompaniesHouseNumber,
                Link = string.Format(ExternalSiteConstants.CompaniesHouseByCompany, outgoingTrustDetails.CompaniesHouseNumber),
                LinkText = "View the Companies House information"
            };
}

<partial name="_ProjectSummary" model="@projectDetails" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <nav class="moj-sub-navigation" aria-label="Project sub-navigation">
            <ul class="moj-sub-navigation__list">

                <li class="moj-sub-navigation__item">
                    <a class="moj-sub-navigation__link" href="/projects/51FA403B-B3F3-4580-919B-207B842B9BE3/tasks">Task list</a>
                </li>


                <li class="moj-sub-navigation__item">
                    <a class="moj-sub-navigation__link" aria-current="page" href="/projects/51FA403B-B3F3-4580-919B-207B842B9BE3/information">About the project</a>
                </li>


                <li class="moj-sub-navigation__item">
                    <a class="moj-sub-navigation__link" href="/projects/51FA403B-B3F3-4580-919B-207B842B9BE3/notes">Notes</a>
                </li>


                <li class="moj-sub-navigation__item">
                    <a class="moj-sub-navigation__link" href="/projects/51FA403B-B3F3-4580-919B-207B842B9BE3/external-contacts">External contacts</a>
                </li>


                <li class="moj-sub-navigation__item">
                    <a class="moj-sub-navigation__link" href="/projects/51FA403B-B3F3-4580-919B-207B842B9BE3/internal-contacts">Internal contacts</a>
                </li>


            </ul>
        </nav>
    </div>
</div>


<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
        <nav>
            <h2 class="govuk-heading-m">Jump to section</h2>
            <ul class="list-style-none govuk-!-padding-0">
                <li>
                    <a class="govuk-link govuk-link--no-visited-state" href="#projectDetails">Project details</a>
                </li>

                <li>
                    <a class="govuk-link govuk-link--no-visited-state" href="#advisoryBoardDetails">Advisory board details</a>
                </li>

                <li>
                    <a class="govuk-link govuk-link--no-visited-state" href="#academyDetails">Academy details</a>
                </li>

                <li>
                    <a class="govuk-link govuk-link--no-visited-state" href="#incomingTrustDetails">Incoming trust details</a>
                </li>

                <li>
                    <a class="govuk-link govuk-link--no-visited-state" href="#outgoingTrustDetails">Outgoing trust details</a>
                </li>

            </ul>
        </nav>

    </div>

    <div class="govuk-grid-column-three-quarters" id="projectInformationList">
        <h2 class="govuk-heading-l">About the project</h2>

        <div id="projectDetails" class="project-information-block">
            <h3 class="govuk-heading-m">Project details</h3>
            <govuk-summary-list>
                <govuk-summary-item label="Type" asp-for="@projectDetails.ProjectType" />
                <div class="govuk-summary-list__row govuk-summary-list__row--no-actions">
                    <dt class="govuk-summary-list__key">Transfer date</dt>
                    <dd class="govuk-summary-list__value">
                        @projectDetails.Date.ToDateString()
                        @if (projectDetails.IsDateProvisional == true)
                        {
                            <strong class="govuk-tag govuk-tag--grey">provisional</strong>
                        }

                    </dd>
                </div>
                <govuk-summary-item label="Local authority" asp-for="@projectDetails.LocalAuthority" />
                <govuk-summary-item label="Diocese" asp-for="@schoolDetails.Diocese" />
                <govuk-summary-item label="Region" asp-for="@projectDetails.Region" />
            </govuk-summary-list>
        </div>


        <div id="reasonsFor" class="project-information-block">
            <h3 class="govuk-heading-m">Reasons for the transfer</h3>

            <govuk-summary-list>
                <govuk-summary-item label="Is this transfer due to 2RI?" asp-for="@reasonForTransfer.IsDueTo2RI" />
                <govuk-summary-item label="Is this transfer due to an inadequate Ofsted rating?" asp-for="@reasonForTransfer.IsDueToOfstedRating" />
                <govuk-summary-item label="Is this transfer due to financial, safeguarding or governance issues?" asp-for="@reasonForTransfer.IsDueToIssues" />

            </govuk-summary-list>
        </div>


        <div id="advisoryBoardDetails" class="project-information-block">
            <h3 class="govuk-heading-m">Advisory board details</h3>

            <govuk-summary-list>
                <govuk-summary-item label="Date of advisory board" asp-for="@advisoryBoardDetails.Date" />
                <govuk-summary-item label="Conditions from advisory board" asp-for="@advisoryBoardDetails.Conditions" />
            </govuk-summary-list>

        </div>


        <div id="academyDetails" class="project-information-block">
            <h3 class="govuk-heading-m">Academy details</h3>
            <govuk-summary-list>
                <govuk-summary-item label="Name" asp-for="@schoolGiasLink" />
                <govuk-summary-item label="Academy URN (unique reference number)" asp-for="@schoolDetails.Urn" />
                <govuk-summary-item label="Type" asp-for="@schoolDetails.Type" />
                <govuk-summary-item label="AgeRange" asp-for="@schoolDetails.AgeRange" />
                <govuk-summary-item label="Phase" asp-for="@schoolDetails.Phase" />
                <govuk-summary-item label="SharePoint folder" asp-for="@schoolSharePointLink" />
            </govuk-summary-list>
        </div>


        <div id="incomingTrustDetails" class="project-information-block">
            <h3 class="govuk-heading-m">Incoming trust details</h3>

            <govuk-summary-list>
                <govuk-summary-item label="Name" asp-for="@incomingTrustGiasLink" />
                <govuk-summary-item label="UKPRN (UK provider reference number)" asp-for="@incomingTrustDetails.UkPrn" />
                <govuk-summary-item label="Group ID (identifier)" asp-for="@incomingTrustDetails.GroupId" />
                <govuk-summary-item label="Companies house number" asp-for="@incomingTrustcompaniesHouse" />
                <govuk-summary-item label="Address" asp-for="@incomingTrustDetails.Address" />
                <govuk-summary-item label="SharePoint folder" asp-for="@incomingTrustSharePointLink" />
            </govuk-summary-list>
        </div>

        <div id="outgoingTrustDetails" class="project-information-block">
            <h3 class="govuk-heading-m">Outgoing trust details</h3>

            <govuk-summary-list>
                <govuk-summary-item label="Name" asp-for="@outgoingTrustGiasLink" />
                <govuk-summary-item label="UKPRN (UK provider reference number)" asp-for="@outgoingTrustDetails.UkPrn" />
                <govuk-summary-item label="Group ID (identifier)" asp-for="@outgoingTrustDetails.GroupId" />
                <govuk-summary-item label="Companies house number" asp-for="@outgoingTrustCompaniesHouse" />
                <govuk-summary-item label="Address" asp-for="@outgoingTrustDetails.Address" />
                <govuk-summary-item label="SharePoint folder" asp-for="@outgoingTrustSharePointLink" />
            </govuk-summary-list>
        </div>
    </div>
</div>