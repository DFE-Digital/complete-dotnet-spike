@using Dfe.Complete.API.Contracts.Project
@model ProjectDetails
@{
    string dateLabel = "";

    if (Model.ProjectType == ProjectType.Conversion)
    {
        dateLabel = "Conversion date";
    }
    else if (Model.ProjectType == ProjectType.Transfer)
    {
        dateLabel = "Transfer date";
    }
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">
            School URN @Model.Urn
            @if (Model.ProjectType == ProjectType.Conversion)
            {
                <strong class="govuk-tag govuk-tag--purple">Conversion</strong>
            }
            else if (Model.ProjectType == ProjectType.Transfer)
            {
                <strong class="govuk-tag govuk-tag--blue">Transfer</strong>
            }
        </span>
        <h1 class="govuk-heading-xl">@Model.Name</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Important
                </h2>
            </div>
            <div class="govuk-notification-banner__content flash">
                <h3>Not assigned to project</h3><p>This project is not assigned to you and cannot be changed, you can add notes or contacts if required.</p>
            </div>
        </div>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
        <dl class="govuk-summary-list dfe-summary-list--project-summary" id="project-summary">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">@dateLabel</dt>
                <dd class="govuk-summary-list__value">@Model.Date.ToDateString()</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">Incoming trust</dt>
                <dd class="govuk-summary-list__value">@Model.IncomingTrustName</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">LA and region</dt>
                <dd class="govuk-summary-list__value">@Model.LocalAuthority, @Model.Region</dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">SharePoint links</dt>
                <dd class="govuk-summary-list__value">
                    <a target="_blank" href="https://educationgovuk.sharepoint.com/:f:/r/sites/ServiceDeliveryDirectorate/Shared%20Documents/A2C%20and%20Interventions/Complete%20conversions,%20transfers%20and%20changes/Technical?csf=1&amp;web=1&amp;e=FWzEMP">School folder (opens in new tab)</a> | <a target="_blank" href="https://educationgovuk.sharepoint.com/:f:/r/sites/ServiceDeliveryDirectorate/Shared%20Documents/A2C%20and%20Interventions/Complete%20conversions,%20transfers%20and%20changes/Technical?csf=1&amp;web=1&amp;e=FWzEMP">Trust folder (opens in new tab)</a>
                </dd>
            </div>
        </dl>

    </div>
</div>
